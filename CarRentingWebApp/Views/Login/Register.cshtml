@model CarRentingWebApp.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Register";
}
<h1 align="center">Register</h1>

<br />
@Html.AntiForgeryToken()

<form asp-controller="Login" asp-action="Register" method="post">
    <div class="card mx-auto" style="width: 50rem;">
        <div class="card-body">

            <div class="form-group row">
                <div class="col">
                    <label class="disable-text">First name</label>
                    <input type="text" class="form-control" asp-for="FirstName">
                </div>
                <div class="col">
                    <label class="disable-text">Last name</label>
                    <input type="text" class="form-control" asp-for="LastName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label class="disable-text">Date of birth</label>
                    <input type="date" asp-for="DateOfBirth" class="form-control datepicker">
                </div>
                <div class="form-group">
                    <label class="disable-text">Gender</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label class="disable-text">Email address</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label class="disable-text">Username</label>
                    <input type="text" class="form-control" asp-for="Username">
                </div>
                <div class="col">
                    <label class="disable-text">Password</label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>
            </div>

            <hr />
            <br />
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success" />
            </div>
        </div>
            </div>
</form>

